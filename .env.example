DJ_DEBUG=true
DJ_SECRET_KEY=change-me
DJ_ALLOWED_HOSTS=127.0.0.1,localhost

# Storage switch
STORAGE_BACKEND=local          # local | s3

# Local media
MEDIA_ROOT=media
MEDIA_URL=/media/

# S3 (only used when STORAGE_BACKEND=s3)
AWS_STORAGE_BUCKET_NAME=
AWS_S3_REGION_NAME=
AWS_S3_ENDPOINT_URL=           # optional for non-AWS S3
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# DB (optional; defaults to sqlite)
DATABASE_URL=sqlite:///db.sqlite3
